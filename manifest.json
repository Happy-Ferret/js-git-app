{
  "name": "JS-Git Test App",
  "version": "0.1.2",
  "manifest_version": 2,
  "offline_enabled": true,
  "description": "A js-git packaged app for chrome and chromebooks.",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    {"socket": [
      "tcp-connect:*:*",
      "tcp-listen::*",
      "udp-send-to::*",
      "udp-bind::*"
    ]}
  ]
}
